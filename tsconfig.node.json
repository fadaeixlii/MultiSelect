{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",

    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom",
      "./@types/utility",
      "./src/charting_library/charting_library.d.ts"
    ]
  },
  "exclude": [
    "./public",
    "./src/charting_library",
    "tailwind.config.js",
    "vitest.config.ts",
    "vitest.config.ts",
    "postcss.config.js",
    "prettier.config.js",
    ".eslintrc.cjs",
    "service-worker.js",
    "./src/components/utils/lenis.tsx"
  ],
  "include": [
    "./src",
    "./@types/utility.d.ts",
    "src/components/common/TradingViewChart/index.tsx",
    "src/components/common/TradingViewChart/datafeed.tsx"
  ]
}
